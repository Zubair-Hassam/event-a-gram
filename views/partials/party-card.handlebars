<div class="card column is-full-tablet is-half-desktop is-one-quarter-widescreen mx-3 my-3">
  <a href="/party/{{id}}">
    <header class="card-header">
      <p class="card-header-title is-centered">{{title}}</p>
    </header>
    <div class="card-image">
      <figure class="image is-4by3">
        <img src="/images/{{theme.theme_description}}.png" alt="{{theme.theme_description}}">
      </figure>
    </div>
    <div class="card-content is-flex is-justify-content-center">
      <div class="content">
        <h5>EVENT DATE: {{format_date startdate}}</h5>
      </div>
    </div>
  </a>

</div>

